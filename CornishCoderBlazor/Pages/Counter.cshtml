@page "/counter"
@using Microsoft.AspNetCore.Blazor.Browser.Interop

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        RegisteredFunction.Invoke<bool>("increment", currentCount);
    }

    void IncrementCallback(string newCount)
    {
        currentCount = int.Parse(newCount);
    }
}
